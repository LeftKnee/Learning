                    </Canvas>
                </Viewbox>
            </win:Button>
        </Grid>

        <Grid x:Name="ConnectingGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.3*" MinWidth="320"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <winui:AnimatedVisualPlayer Grid.Column="1" Margin="16" Grid.Row="1">
                <lottie:LottieVisualSource UriSource="ms-appx:///Animations/connecting.json" />
            </winui:AnimatedVisualPlayer>
            <TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource SubheaderTextBlockStyle}" Text="Connecting..." Margin="4"/>
        </Grid>

        <Grid x:Name="ChattingGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListView x:Name="MessagesListView" Grid.Row="0" Margin="20,12,20,0" ItemsSource="{Binding AllMessages}" ItemTemplateSelector="{StaticResource MessageTemplateSelector}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <TextBox x:Name="MessageToSendTextBox" PlaceholderText="Start a new message" Text="{Binding MessageToSend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding MessageToSendIsEnabled}" Grid.Row="1" Grid.Column="0" CornerRadius="12" Margin="20"/>
        </Grid>
    </Grid>
</Page>
